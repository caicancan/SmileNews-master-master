<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/item_news_bg"
      >
        <TextView
            android:id="@+id/item_news_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/item_news_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:transitionName="photos"
            />
        <TextView
            android:id="@+id/item_news_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_news_date_color"
            android:layout_alignParentBottom="true"
            android:text="2016-10-28 16:14"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
</RelativeLayout>
